<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_custom_invoice">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page" dir="rtl">
                            <style type="text/css">
                                @font-face {
                                font-family: 'Tajawal';
                                font-style: normal;
                                font-weight: 400;
                                src: url('/custom_printout_reports/static/src/fonts/tajawal-v3-arabic-regular.eot'); /* IE9 Compat Modes */
                                src: local('Tajawal'), local('Tajawal-Regular'),
                                url('/custom_printout_reports/static/src/fonts/tajawal-v3-arabic-regular.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
                                url('/custom_printout_reports/static/src/fonts/tajawal-v3-arabic-regular.woff2') format('woff2'), /* Super Modern Browsers */
                                url('/custom_printout_reports/static/src/fonts/tajawal-v3-arabic-regular.woff') format('woff'), /* Modern Browsers */
                                url('/custom_printout_reports/static/src/fonts/tajawal-v3-arabic-regular.ttf') format('truetype'), /* Safari, Android, iOS */
                                url('/custom_printout_reports/static/src/fonts/tajawal-v3-arabic-regular.svg#Tajawal') format('svg'); /* Legacy iOS */
                                }

                                body {
                                position: relative;
                                width: 21cm;
                                height: 29.7cm;
                                margin: 0 auto;
                                color: #555555;
                                background: #FFFFFF;
                                font-family: Tajawal !important;
                                font-size: 14px;
                                }
                                
                                #details {
                                margin-bottom: 30px;
                                }

                                #company {
                                float: right;
                                text-align: right;
                                }


                                #details {
                                margin-bottom: 50px;
                                }

                                #client {
                                float: left;
                                text-align: right;
                                }



                                #invoice {
                                float: right;
                                text-align: right;
                                }

                                table {
                                    border: 1px solid #000;
                                    margin: 10px 0px 0px;
                                    width: 100%;
                                    float: left;
                                    border-spacing: 0px;
                                }

                                table tr th,
                                table tr td {
                                    border-right: 1px solid #000;
                                    text-align: center;
                                }

                                table tr th {
                                    padding: 10px 0px;
                                    background: #002e46;
                                    color: #ffffff;
                                                                    
                                }

                                table tr td {
                                    border-top: 1px solid #000;
                                    padding: 5px 0px;
                                }

                            </style>
                            <body>

                            
                            <div class="clearfix">
                                <div id="company">
                                    <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 45px;" alt="Logo"/>
                                    <h2 class="name"><t t-esc="o.company_id.name"/></h2>
                                </div>

                            </div>

                            <div><center>
                                <h3>فــاتورة</h3>
                                <h5 class="name"><b>الرقم الضريبي : </b><t t-esc="o.company_id.vat"/></h5>
                            </center></div>


                            <!--t t-if="o.is_rent">
                                <div id="details" class="clearfix">
                                    <div id="client">
                                        <div class="to">Claim No</div>
                                        <h2 class="name"><t t-esc="o.origin"/></h2>
                                    </div>
                                </div>
                            </t-->

                            <div id="details" class="clearfix">
                                <div id="invoice" style="display:inline">
                                    <h6 class="name"><b>اسم العميل : </b><t t-esc="o.partner_id.name"/></h6>
                                    <h6 class="name"><b>عنوان العميل : </b><t t-esc="o.partner_id.country_id.name"/>,<t t-esc="o.partner_id.state_id.name"/></h6>
                                    <h6 class="name"><b>الرقم الضريبي : </b><t t-esc="o.partner_id.vat"/></h6>
                                    <h6 class="name"><b>رقم الهاتف : </b><t t-esc="o.partner_id.phone"/></h6>
                                </div>    
                                <div id="client" style="background: #002e46;color: #ffffff;">
                                        <h1><t t-esc="o.number"/></h1>
                                        <div class="name">تاريخ الفاتورة :<t t-esc="o.date_invoice"/></div>
                                </div>
                            </div>

                            <br/>
                            <table>
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>الوصف</th>
                                        <th>السعر</th>
                                        <th>الضريبة</th>
                                        <th>مبلغ الضريبة</th>
                                        <th>الإجمالي</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <tr>
                                            <td><t t-esc="line_index+1"/></td>
                                            <td><t t-esc="line.name"/> </td>
                                            <td><span t-field="line.price_subtotal"/></td>
                                            <td><t t-esc="str(line.invoice_line_tax_ids.mapped('name')).replace('[','').replace(']','').replace('\'','')"/> </td>
                                            <td><span t-field="line.price_tax"/></td>
                                            <td><span t-field="line.price_total"/> </td>
                                        </tr>
                                    </t>
                                </tbody>
                                
                            </table>
                            <br />

                    <div class="clearfix">
                        <div id="client">
                            <div t-attf-class="ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong>الإجمالي الفرعي</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    
                                    <tr style="">
                                        <td><strong>مبلغ الضريبة</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_tax"/>
                                        </td>
                                    </tr>
                                    
                                    <tr class="border-black o_total">
                                        <td><strong>الإجمالي</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <br />
                    <br />
                            <div id="details" class="clearfix">
                                <div id="invoice">
                                <h5>تفاصيل الحساب البنكي</h5>
                                    <!--div class="name">Account Name : <t t-esc="o.partner_id.name"/></div-->
                                    <h6 class="name"><b>اسم البنك : </b><t t-esc="o.partner_bank_id.bank_id.name"/></h6>
                                    <h6 class="name"><b>العملة : </b><t t-esc="o.partner_bank_id.currency_id.name"/></h6>
                                    <h6 class="name"><b>رقم الحساب : </b><t t-esc="o.partner_bank_id.acc_number"/></h6>
                                    <h6 class="name"><b>العنوان/الفرع : </b><t t-esc="o.partner_bank_id.bank_id.city"/>,<t t-esc="o.partner_bank_id.bank_id.street"/></h6>
                                    <h6 class="name"><b>كود البنك : </b><t t-esc="o.partner_bank_id.bank_id.bic"/></h6>
                                    <h6 class="name"><b>رقم الايبان : </b><t t-esc="o.partner_bank_id.iban"/></h6>
                                </div>
                            </div>    
                            </body>


                        </div>
                    </t>
                </t>
                </t>
        </template>

    </data>

</odoo>        