<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
         <record id="paperformat_invoice" model="report.paperformat">
            <field name="name">Invoice Format</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">32</field>
            <field name="header_spacing">0</field>
            <field name="header_line" eval="False"/>
            <field name="dpi">90</field>
        </record>
        <report
                id="invoice_print_action"
                model="account.move"
                string="SBT Invoice"
                report_type="qweb-pdf"
                name="custom_printout_reports.report_custom_invoice"
                file="custom_printout_reports.report_custom_invoice"
                menu="True"
                attachment_use="False"
                />
        <record id="invoice_print_action" model="ir.actions.report">
            <field name="paperformat_id" ref="custom_printout_reports.paperformat_invoice"/>
        </record>
        <report
                id="quotation_print_action"
                model="sale.order"
                string="SBT English Quotation"
                report_type="qweb-pdf"
                name="custom_printout_reports.report_custom_quotation"
                file="custom_printout_reports.report_custom_quotation"
                menu="True"
                attachment_use="False"
        />
        <record id="quotation_print_action" model="ir.actions.report">
            <field name="paperformat_id" ref="custom_printout_reports.paperformat_invoice"/>
        </record>        
    </data>
</openerp>
